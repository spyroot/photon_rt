Example:
{
  "disk": "$DISK"
  "preinstall": [
                  "#!/bin/sh",
                  "ondisk=$(ls -lh /dev/disk/by-path/ | grep 'scsi-0:0:1:0' | cut -d' ' -f 9)",
                  "export DISK=\"/dev/disk/by-path/$ondisk\""
                ]
}


+        'preinstall',
+        'preinstallscripts',
